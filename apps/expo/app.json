{
  "expo": {
    "name": "Boxx",
    "slug": "Boxx",
    "scheme": "Boxx",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*", "../../packages/app/assets/fonts/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.Boxx.games"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.Boxx.games"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router", "expo-font"],
    "experiments": {
      "typedRoutes": true
    },
    "fonts": [
      "../../packages/app/assets/fonts/Gilroy-Bold.ttf",
      "../../packages/app/assets/fonts/Gilroy-Light.ttf",
      "../../packages/app/assets/fonts/Gilroy-Medium.ttf",
      "../../packages/app/assets/fonts/Gilroy-Regular.ttf",
      "../../packages/app/assets/fonts/Gilroy-SemiBold.ttf"
    ]
  }
}
